{
    "include": [
      "src/**/*.d.ts",
      "src/**/*.ts",
      "test/**/*.ts",
      "test/**/*.ts",
      "types/**/*.d.ts",
    ],
    "compilerOptions": {
      "target": "ES2015",
      "module": "ES2022",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@ai/*": ["src/ai/*"],
        "@lib/*": ["src/lib/*"],
        "@utils/*": ["src/utils/*"],
      },
      "skipLibCheck": true, /* Skip type checking all .d.ts files. */
      "allowSyntheticDefaultImports": false, // tsx中使用js的模块引入方式
      "allowJs": false,
    }
  }